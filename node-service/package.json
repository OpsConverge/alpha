{
  "name": "calculator-service",
  "version": "1.0.0",
  "description": "Calculator service with comprehensive Jest unit tests",
  "main": "src/index.js",
  "scripts": {
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose"
  },
  "keywords": ["calculator", "testing", "jest", "unit-tests"],
  "author": "Test Developer",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "jest-junit": "^16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "testResultsProcessor": "jest-junit",
    "reporters": [
      "default",
      "jest-junit"
    ]
  }
}
